%html{:xmlns => "http://www.w3.org/1999/xhtml", 'xml:lang' => "en", :lang => "en"}

  %head
    %meta{'http-equiv' => "content-type", :content => "text/html;charset=UTF-8"}
    %title= 'VoterMedia' + (@page_title.blank? ? '' : ": #{@page_title}")
    = stylesheet_link_tag 'main', 'screen', :media => "screen"
  
  %body#welcome
    -# Wrapping the body inside a table cell helps prevent small displays like cell phones from compressing everything into too-narrow columns:
    %table{:style => "border-collapse: collapse", :width => "100%"}
      %tr
        %td
          
          = render 'layouts/header'
          -# cache(:fragment => 'layouts/nav') do
          = render 'layouts/nav'    
          
          #main
            = flash_notice
            = yield
          
          = render 'layouts/main_nav_bottom' 
        
        -# No one was using this: = render 'layouts/uservoice'
        = render 'layouts/analytics'
        
  = javascript_include_tag :defaults, 'jquery'
