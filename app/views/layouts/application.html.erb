    PUBLICATIONS
  </div>
  <div id="columns">
    <div id="side">
      <div id="nav-header">
        My Communities:
      </div>
      <div id="nav-table">
      
      </div>
      <div id="search">
        <br /><br /><br /><br />
        Find communities:
        <input type="text" name="fname" size="13" /><br />
        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<input type="submit" value="Search" />
      </div>
    </div>
    <div id="main">
      <% if flash[:notice] -%>
        <div id="notice"><%= flash[:notice] %></div>
      <% end -%>


      <%= yield  %>

    </div>
  </div>
  <div id="top-bottom-nav">
    <%= link_to 'HOME', home_path %> &nbsp; &nbsp; &nbsp; &nbsp; 
    FORUM &nbsp; &nbsp; &nbsp; &nbsp; 
    TERMS &nbsp; &nbsp; &nbsp; &nbsp; 
