<% form_for(@community) do |f| %>
  <%= f.error_messages %>

  <p class="required">
    * indicates required info
  </p>
  <p>
    <b class="required">* <%= f.label :name, 'Community name' %></b> [50 characters max]<br />
    <%= f.text_field :name %>
  </p>
  <p>
    <b class="required">* <%= f.label :short_name %></b> [20 characters max] (Can be same as Community name if short enough.)<br />
    <%= f.text_field :short_name %>
  </p>
  <p>
    <b class="required">* <%= f.label :category, 'Type of community' %></b><br />
    <%= f.select (:category, ['Other', 'Co-op', 'Corporation', 'Country', 'Credit Union', 'Homeowner', 'Investor', 'Labour', 'Municipal', 'Nonprofit', 'Political', 'Province', 'State', 'Student']) %>
  </p>
  
  <hr />
  <p><b>Headquarters location --</b>
  
  <p>
    <b><%= f.label :country %></b> [20 characters max]<br />
    <%= f.text_field :country %>
  </p>
  <p>
    <b><%= f.label :prov_state, 'Province/State' %></b> [20 characters max]<br />
    <%= f.text_field :prov_state %>
  </p>
  <p>
    <b><%= f.label :city %></b> [20 characters max]<br />
    <%= f.text_field :city %>
  </p>
  
  <hr />
  
  <p>
    <b><%= f.label :scope, 'Regional Scope' %></b> (Where most voters & operations are located. Can be "International".)<br />
    <%= f.text_field :scope %>
  </p>
  <p>
    <b><%= f.label :official_url, 'Official website URL' %></b><br />
    <%= f.text_field :official_url %>
  </p>
  <p>
    <b><%= f.label :wiki_url, 'Wikipedia URL' %></b><br />
    <%= f.text_field :wiki_url %>
  </p>
  <p>
    <b><%= f.label :description %></b><br />
    <%= f.text_area :description, :rows => 8 %>
  </p>

  <%= f.submit "Submit" %>
  
<% end %>