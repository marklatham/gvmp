<% form_for(@faq) do |f| %>
  <%= f.error_messages %>
 
  <p>
    <%= f.label :category %><br />
    <%= f.select (:category, [['Organization (Sequence 1.x)', 'Organization'],
                              ['Mechanics (Sequence 3.x)', 'Mechanics'],
                              ['Voting (Sequence 5.x)', 'Voting'],
                              ['Reasoning (Sequence 7.x)', 'Reasoning'],
                              ['Other (Sequence 9.x)', 'Other']]) %>
  </p>
  <p>
    <%= f.label :sequence %><br />
    <%= f.text_field :sequence %>
  </p>
  <p>
    <%= f.label :importance %><br />
    <%= f.text_field :importance %>
  </p>
  <p>
    <%= f.label :question %><br />
    <%= f.text_field :question, :size => 100 %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_area :answer, :cols => 70 %>
  </p>
  <p>
    <%= f.submit "Submit" %>
  </p>
<% end %>

<br />

<%= link_to 'Back to FAQs', faqs_path %>

