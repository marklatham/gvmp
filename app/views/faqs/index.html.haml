- @page_title = 'FAQs'

%table{:style => "margin: auto;"}
  %tr
    %td
      %img{:src => "images/blonde.jpg", :height => 409}
    %td
      %h1{:style => "text-align: center; padding: 0.5em"} Frequently Asked Questions
    %td
      %img{:src => "images/lemur.jpg", :height => 409}

- if current_user and (current_user.permission >= 7.0)
  %span.permission= link_to 'Create new FAQ', new_faq_path

%table#faq{:cellspacing => 0, :style => "width: 80%; min-width: 46em; margin-left: 10%; margin-right: 10%;"}

  %tr
    %td
      %hr
      %a{ :name => "Our Organization" }
      %h3 FAQs: Our Organization
  
  - faqs = Faq.find(:all, :order => "sequence", :conditions => ["category = ?", "1. Organization"])
  - for faq in faqs

    %tr
      %td.question
        = h faq.question
      - if current_user and (current_user.permission >= 7.0)
        %td.permission= link_to 'Edit', edit_faq_path(faq)
        %td.permission= link_to 'Destroy', faq, :confirm => 'Are you sure?', :method => :delete

    %tr
      %td.answer
        = faq.answer.html_safe
      - if current_user and (current_user.permission >= 7.0)
        %td.permission= faq.sequence

