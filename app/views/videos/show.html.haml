- @page_title = 'Video: ' + @video.title

%h1{:align => "center"}
  Video:
  = @video.title

%p{:align => "center"}
  %object{:width => "425", :height => "344"}
    %param{:name => "movie", :value => "http://www.youtube.com/v/" + @video.url + "&hl=en&fs=1"}
    %param{:name => "allowFullScreen", :value => "true"}
    %param{:name => "allowscriptaccess", :value => "always"}
    %embed{:src => "http://www.youtube.com/v/" + @video.url + "&hl=en&fs=1", :type => "application/x-shockwave-flash", :allowscriptaccess => "always", :allowfullscreen => "true", :width => "425", :height => "344"}

%h2 Transcript
= @video.transcript

- if current_user and (current_user.permission >= 7.0)
  %p.permission= link_to "Edit this video's data", edit_video_path(@video)
